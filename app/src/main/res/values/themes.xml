<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotificationSave" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/noty_primary</item>
        <item name="colorPrimaryVariant">@color/noty_primary</item>
        <item name="colorOnPrimary">@color/noty_primary</item>
        <item name="android:windowBackground">@color/core_white</item>

        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Customize your theme here. -->
    </style>
    
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/core_transparent</item>
        <item name="android:windowBackground">@drawable/noty_bg_splash</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>